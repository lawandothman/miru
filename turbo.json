{
	"$schema": "https://turbo.build/schema.json",
	"tasks": {
		"build": {
			"dependsOn": ["^build", "^db:migrate"],
			"env": [
				"DATABASE_URL",
				"BETTER_AUTH_SECRET",
				"BETTER_AUTH_URL",
				"GOOGLE_CLIENT_ID",
				"GOOGLE_CLIENT_SECRET",
				"TMDB_API_READ_ACCESS_TOKEN"
			],
			"outputs": [".next/**", "dist/**"]
		},
		"dev": {
			"persistent": true,
			"cache": false
		},
		"lint": {},
		"typecheck": {},
		"db:generate": {
			"cache": false
		},
		"db:migrate": {
			"cache": false,
			"env": ["DATABASE_URL"]
		},
		"db:seed": {
			"cache": false,
			"env": ["DATABASE_URL", "TMDB_API_READ_ACCESS_TOKEN", "TMDB_SEED_REGION"]
		},
		"db:push": {
			"cache": false,
			"env": ["DATABASE_URL"]
		}
	}
}
