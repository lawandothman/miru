{
	"name": "miru",
	"version": "1.0.0",
	"private": true,
	"license": "MIT",
	"repository": "https://github.com/lawandothman/miru.git",
	"scripts": {
		"dev": "turbo dev",
		"dev:up": "bash scripts/dev.sh",
		"dev:tunnel": "bash scripts/dev-tunnel.sh",
		"dev:web": "turbo dev --filter=@miru/web",
		"dev:mobile": "turbo dev --filter=@miru/mobile",
		"build": "turbo build",
		"lint": "oxlint .",
		"lint:fix": "oxlint --fix .",
		"format": "oxfmt .",
		"format:check": "oxfmt --check",
		"test": "turbo test",
		"check": "turbo run lint format:check typecheck test",
		"typecheck": "turbo typecheck",
		"db:generate": "turbo db:generate",
		"db:migrate": "turbo db:migrate",
		"db:seed": "turbo db:seed",
		"db:push": "turbo db:push"
	},
	"devDependencies": {
		"eslint-plugin-react-hooks": "catalog:",
		"oxfmt": "0.34.0",
		"oxlint": "1.49.0",
		"turbo": "2.8.10"
	},
	"packageManager": "pnpm@10.29.3"
}
