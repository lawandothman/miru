{
	"name": "miru",
	"version": "1.0.0",
	"private": true,
	"license": "MIT",
	"repository": "https://github.com/lawandothman/miru.git",
	"scripts": {
		"dev": "turbo dev",
		"build": "turbo build",
		"lint": "oxlint --config .oxlintrc.json apps/ packages/",
		"lint:fix": "oxlint --config .oxlintrc.json --fix apps/ packages/",
		"format": "oxfmt apps/web/src/ packages/db/src/ packages/trpc/src/ packages/db/drizzle.config.ts",
		"format:check": "oxfmt --check apps/web/src/ packages/db/src/ packages/trpc/src/ packages/db/drizzle.config.ts",
		"typecheck": "turbo typecheck",
		"db:generate": "turbo db:generate",
		"db:push": "turbo db:push"
	},
	"devDependencies": {
		"oxfmt": "0.32.0",
		"oxlint": "1.47.0",
		"turbo": "2.5.4"
	},
	"packageManager": "pnpm@9.4.0"
}
